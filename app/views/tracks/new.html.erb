<h1>New Track</h1>

<form action="<%= tracks_url %>" method="post">
    <%= auth_token %>
    <br>
    <label>Name
      <input type="text" name="track[name]" value="<%= @track.name %>">
    </label>
    <br>

    <input type="hidden" name="track[album_id]" value="<%= @track.album_id %>">
    <br>
    <button>Submit</button>
</form>

<a href="<%= album_url(@track.album_id) %>">Back to Album</a>
<br>
<a href="<%= bands_url %>">All Bands</a>
