<h1>New Album</h1>

<form action="<%= albums_url %>" method="post">
    <%= auth_token %>
    <br>
    <label>Title
      <input type="text" name="album[title]" value="<%= @album.title %>">
    </label>
    <br>
    <label>Year
      <input type="text" name="album[yr]" value="<%= @album.yr %>">
    </label>
    <br>
    <input type="hidden" name="album[band_id]" value="<%= @band.id %>">
    <br>
    <button>Submit</button>
</form>

<a href="<%= bands_url %>">All Bands</a>
